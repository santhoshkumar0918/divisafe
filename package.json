{
  "name": "anonymous-support-platform",
  "version": "1.0.0",
  "description": "Privacy-first support platform with Self Protocol verification and birthday airdrops",
  "scripts": {
    "build": "forge build",
    "test": "forge test -vv",
    "test:gas": "forge test --gas-report",
    "deploy:testnet": "forge script contracts/deploy/DeployAnonymousSupport.s.sol:DeployAnonymousSupport --rpc-url $CELO_TESTNET_RPC --broadcast --verify",
    "deploy:mainnet": "forge script contracts/deploy/DeployAnonymousSupport.s.sol:DeployAnonymousSupport --rpc-url $CELO_MAINNET_RPC --broadcast --verify",
    "install:deps": "forge install",
    "clean": "forge clean",
    "format": "forge fmt",
    "lint": "solhint 'contracts/**/*.sol'",
    "coverage": "forge coverage"
  },
  "keywords": [
    "self-protocol",
    "soulbound-tokens",
    "privacy",
    "support-platform",
    "celo",
    "solidity"
  ],
  "author": "Anonymous Support Team",
  "license": "MIT",
  "devDependencies": {
    "solhint": "^4.0.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "@selfxyz/contracts-v2": "latest"
  }
}